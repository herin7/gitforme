{
  "name": "gitforme-vscode",
  "displayName": "GitForMe VSCode Extension",
  "description": "Analyze GitHub repositories and view insights from gitforme directly in VSCode.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:gitforme-sidebar"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "gitforme",
          "title": "GitForMe",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "gitforme": [
        {
          "id": "gitforme-sidebar",
          "name": "GitForMe Insights",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "gitforme.analyzeCurrentRepo",
        "title": "Analyze Current Repository",
        "category": "GitForMe",
        "icon": "$(search)"
      },
      {
        "command": "gitforme.login",
        "title": "Login with GitHub",
        "category": "GitForMe",
        "icon": "$(sign-in)"
      },
      {
        "command": "gitforme.logout",
        "title": "Logout",
        "category": "GitForMe",
        "icon": "$(sign-out)"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "gitforme.analyzeCurrentRepo",
          "group": "gitforme",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "configuration": {
      "title": "GitForMe",
      "properties": {
        "gitforme.authToken": {
          "type": "string",
          "description": "Authentication token for GitForMe API access",
          "scope": "application"
        },
        "gitforme.user": {
          "type": "object",
          "description": "Current authenticated user information",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p .",
    "watch": "tsc -watch -p ."
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.70.0",
    "tslint": "^6.1.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
